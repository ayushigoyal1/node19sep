<%-include('./base/header.ejs') %>
<div class="container">
    <div class="alert bg-success my-3">
      <h4 class="text-center" style="color: white;">Student List</h4>
    </div>
  </div>
  <div class="container">
    <div class="row">
        <table class="table text-centre">
            <thead>
                <tr>
                    <th>Roll No</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Father Name</th>
                    <th>Adhar Card</th>
                    <th>mobile No</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <% students.forEach((student)=> { %>
                <tr>
                    <td><%= student.rollNo %></td>
                    <td><%= student.firstName %></td>
                    <td><%= student.lastName %></td>
                    <td><%= student.fatherName %></td>
                    <td><%= student.adharCardNo %></td>
                    <td><%= student.mobileNo %></td>
                    <td><a href="/student/edit/page/<%= student._id %>" class="btn btn-warning  w-75">Edit</td>
                      <td><a href="delete/student/<%= student._id %>" class="btn btn-danger  w-75">Delete</td>
                </tr>
           <% })%>
        </table>
    </div>
  </div>
<%-include('./base/footer.ejs') %>